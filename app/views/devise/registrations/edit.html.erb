<div class="card" style="max-width: 500px; margin: 50px auto;">
  <h2>Edit Profile</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div style="margin-bottom: 20px;">
      <%= f.label :name, style: "display: block; margin-bottom: 5px;" %>
      <%= f.text_field :name, autofocus: true, style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px;" %>
    </div>

    <div style="margin-bottom: 20px;">
      <%= f.label :email, style: "display: block; margin-bottom: 5px;" %>
      <%= f.email_field :email, autocomplete: "email", style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px;" %>
    </div>

    <div style="margin-bottom: 20px;">
      <%= f.label :phone, style: "display: block; margin-bottom: 5px;" %>
      <%= f.text_field :phone, style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px;" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div style="margin-bottom: 20px; color: #856404; background: #fff3cd; padding: 10px; border-radius: 4px;">
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <hr style="margin: 30px 0;">

    <h3 style="margin-bottom: 20px;">Change Password</h3>
    <p style="margin-bottom: 20px; color: #666;">
      <small>Leave blank if you don't want to change it</small>
    </p>

    <div style="margin-bottom: 20px;">
      <%= f.label :password, "New password", style: "display: block; margin-bottom: 5px;" %>
      <% if @minimum_password_length %>
        <small style="color: #666;">(<%= @minimum_password_length %> characters minimum)</small>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px;" %>
    </div>

    <div style="margin-bottom: 20px;">
      <%= f.label :password_confirmation, "Confirm new password", style: "display: block; margin-bottom: 5px;" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px;" %>
    </div>

    <hr style="margin: 30px 0;">

    <div style="margin-bottom: 20px;">
      <%= f.label :current_password, style: "display: block; margin-bottom: 5px;" %>
      <small style="color: #666;">We need your current password to confirm your changes</small>
      <%= f.password_field :current_password, autocomplete: "current-password", required: true, style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px;" %>
    </div>

    <div style="margin-bottom: 20px;">
      <%= f.submit "Update Profile", class: "btn", style: "width: 100%;" %>
    </div>
  <% end %>

  <hr style="margin: 30px 0;">

  <h3 style="margin-bottom: 20px;">Cancel Account</h3>
  <p style="margin-bottom: 20px;">Unhappy?</p>
  <div>
    <%= button_to "Cancel my account", registration_path(resource_name), 
        data: { confirm: "Are you sure? This action cannot be undone.", turbo_confirm: "Are you sure?" }, 
        method: :delete,
        class: "btn btn-danger",
        style: "background: #e74c3c; width: 100%;" %>
  </div>

  <div style="margin-top: 20px;">
    <%= link_to "Back", :back %>
  </div>
</div>